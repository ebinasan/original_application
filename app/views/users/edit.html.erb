<div class="container p-4">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto">
      <h1>プロフィール編集</h1>
      <%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>
        <div class="mb-3">
          <%= f.label :name, "ユーザー名", class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :email, "Eメール", class: "form-label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :password, "パスワード (変更する場合のみ入力)", class: "form-label" %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :password_confirmation, "パスワード確認", class: "form-label" %>
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
        <%= f.submit "更新", class: "btn btn-primary" %>
      <% end %>
      <div class='text-center'>
        <%= link_to 'プロフィールへ戻る', user_path(@user), class: 'btn btn-secondary mt-3' %>
      </div>
    </div>
  </div>
</div>