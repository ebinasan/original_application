<div class="container p-4">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="mb-4"><%= @user.name %> さんのプロフィール</h1>
      
      <table class="table table-bordered table-hover">
        <tr>
          <th scope="row">名前</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th scope="row">メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
      </table>
      
      <%= link_to 'プロフィールを編集', edit_user_path(@user), class: 'btn btn-secondary mb-3' %>
      <%= link_to '戻る', root_path, class: 'btn btn-primary mb-3' %>
    </div>
  </div>
</div>