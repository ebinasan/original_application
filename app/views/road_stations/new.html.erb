<div class="container p-4">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <h1>道の駅を登録する</h1>
      <%= form_with(model: @road_station, local: true) do |f| %>
        <% if @road_station.errors.any? %>
          <div class="alert alert-danger">
            <h4 class="alert-heading">エラーがあります:</h4>
            <ul>
              <% @road_station.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        
        <div class="form-group">
          <%= f.label :name, "道の駅の名前" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :location, "場所" %>
          <%= f.text_field :location, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :phone_number, "電話番号" %>
          <%= f.telephone_field :phone_number, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :business_hours, "営業時間" %>
          <%= f.text_field :business_hours, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :facility_amenities, "施設設備" %>
          <%= f.text_area :facility_amenities, class: "form-control" %>
        </div>
        <%= f.submit "登録", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>