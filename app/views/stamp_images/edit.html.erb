<div class="container p-4">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
    <div class="card">
        <div class="card-body">
<h1>スタンプ画像の編集</h1>
<%= form_with(model: [@road_station, @stamp_image], local: true, html: { multipart: true }) do |f| %>
  <div class="form-group pt-4">
    <%= f.label :image, "スタンプ画像" %>
    <%= f.file_field :image, class: 'form-control' %>
  </div>
  <div class=" pt-2">
    <%= f.label :has_design, "デザインの有無" %>
    <%= f.select :has_design, options_for_select([['デザインあり', true], ['デザインなし', false]], f.object.has_design), {}, class: 'form-control' %>
  </div>
  <div class="form-group pt-4">
    <%= f.submit "更新", class: 'btn btn-primary' %>
  <%= link_to "戻る", road_station_path(@stamp_image.road_station), class: 'btn btn-primary' %>
</div>
<% end %>
</div>
      </div>
    </div>
  </div>
</div>